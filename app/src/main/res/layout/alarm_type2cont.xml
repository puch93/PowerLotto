<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_393C46"
                android:textSize="23dp"
                android:textStyle="bold"
                android:text="제"/>

            <TextView
                android:id="@+id/tv_episode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_393C46"
                android:textSize="23dp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_393C46"
                android:textSize="23dp"
                android:textStyle="bold"
                android:text="회차"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"
                android:textColor="@color/c_code9"
                android:textSize="23dp"
                android:text="1등"/>

        </LinearLayout>




        <RelativeLayout
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:includeFontPadding="false"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/middle_text"
                android:textColor="@color/c_white"
                />

            <TextView
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/num1"
                android:layout_marginLeft="-2dp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/middle_text"
                android:textColor="@color/c_white"
                />

            <TextView
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/num2"
                android:layout_marginLeft="-2dp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/middle_text"
                android:textColor="@color/c_white"
                />

            <TextView
                android:id="@+id/num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/num3"
                android:layout_marginLeft="-2dp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/middle_text"
                android:textColor="@color/c_white"
                />

            <TextView
                android:id="@+id/num5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/num4"
                android:layout_marginLeft="-2dp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/middle_text"
                android:textColor="@color/c_white"
                />

            <TextView
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:textSize="@dimen/middle_text"
                android:textColor="@color/c_white"
                android:layout_toRightOf="@+id/num5"
                android:layout_marginLeft="-2dp" />

            <ImageView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:src="@drawable/b_plus"
            android:layout_toRightOf="@+id/num6" />

            <TextView
            android:id="@+id/bnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/c_white"
            android:layout_toRightOf="@+id/plus"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:src="@drawable/icon_coin"/>

            <TextView
                android:id="@+id/tv_winneramount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:textColor="@color/c_pricetext"
                />

        </LinearLayout>

    </LinearLayout>


</layout>