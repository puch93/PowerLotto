<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<androidx.drawerlayout.widget.DrawerLayout-->
        <!--android:id="@+id/premium_drawer"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_mainback"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ttl_bg"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:id="@+id/btn_sidemenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/large_text"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:text="프리미엄 이용권"
                    android:textColor="@color/c_white" />

                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/back" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/top_text1"
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="당첨률 UP!"
                    android:textStyle="bold"
                    android:textColor="@color/c_defaultblue"
                    android:textSize="@dimen/large_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/smiddle_text"
                    android:text="당첨번호 위주의 통계와 특별한 조합법으로 추출한"
                    android:textColor="@color/c_code4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/smiddle_text"
                    android:text="로또 번호를 받아보실 수 있습니다."
                    android:textColor="@color/c_code4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_1month_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/sel_btnpay"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <ImageView
                            android:id="@+id/rdo_1month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/sel_payment_btnradio"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/middle_text"
                            android:textStyle="bold"
                            android:textColor="@color/c_code4"
                            android:text="1개월 이용권" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/lmiddle_text"
                            android:textStyle="bold"
                            android:textColor="@color/premium_text"
                            android:text="11,000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/smiddle_text"
                            android:textColor="@color/premium_text"
                            android:textStyle="bold"
                            android:text="원" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_3month_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/sel_btnpay"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/rdo_3month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/sel_payment_btnradio"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/middle_text"
                            android:textStyle="bold"
                            android:textColor="@color/c_code4"
                            android:text="3개월 이용권" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/lmiddle_text"
                            android:textStyle="bold"
                            android:textColor="@color/premium_text"
                            android:text="22,000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/smiddle_text"
                            android:textColor="@color/premium_text"
                            android:textStyle="bold"
                            android:text="원" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_6month_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/sel_btnpay"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/rdo_6month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/sel_payment_btnradio"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/middle_text"
                            android:textStyle="bold"
                            android:textColor="@color/c_code4"
                            android:text="6개월 이용권" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/lmiddle_text"
                            android:textStyle="bold"
                            android:textColor="@color/premium_text"
                            android:text="33,000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/smiddle_text"
                            android:textColor="@color/premium_text"
                            android:textStyle="bold"
                            android:text="원" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_12month_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/sel_btnpay"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/rdo_12month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/sel_payment_btnradio"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/middle_text"
                            android:textStyle="bold"
                            android:textColor="@color/c_code4"
                            android:text="12개월 이용권" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/lmiddle_text"
                            android:textStyle="bold"
                            android:textColor="@color/premium_text"
                            android:text="55,000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/smiddle_text"
                            android:textColor="@color/premium_text"
                            android:textStyle="bold"
                            android:text="원" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/btn_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_payment"
                    android:gravity="center"
                    android:textSize="@dimen/large_text"
                    android:textStyle="bold"
                    android:text="구매하기"
                    android:textColor="@color/c_white" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/banner_area"
                    layout="@layout/banner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </FrameLayout>


        </LinearLayout>


