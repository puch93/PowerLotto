<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="status_matarial" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#389AF1</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="mydialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- dialog activity set -->
    <style name="ActivityDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--        <item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MyAppTheme.NumberPicker" parent="AppTheme">
        <item name="colorControlNormal">@color/color_e9e7eb</item>
        <item name="android:textColorPrimary">#2d2929</item>
<!--        <item name="android:textColorHighlight">#389af1</item>-->
        <item name="android:textSize">27dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
